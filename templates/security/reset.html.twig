{% extends 'layout/base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="row justify-content-md-center align-items-center h-100">
        <div class="card-wrapper">
            <div class="card fat">
                <div class="card-body">
                    <h4 class="card-title">Reset Password</h4>

                    {{ form_start(form, {attr : {'class': 'my-login-validation'}}) }}

                        {{ form_errors(form) }}

                        {{ form_label(form.plainPassword.first) }}
                        {{ form_widget(form.plainPassword.first, {attr : {'required': true, 'autofocus': true, 'data-eye': true}}) }}

                        {{ form_label(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second, {attr : {'required': true, 'autofocus': true, 'data-eye': true}}) }}

                        <div class="form-group form-text text-muted">
                            Make sure your password is strong and easy to remember
                        </div>

                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-primary btn-block" formnovalidate>
                                Reset Password
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
