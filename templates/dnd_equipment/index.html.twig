{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">

            <table class="table table-sm">
                <thead>
                <tr class="table-primary">
                    <th>Name</th>
                    <th>Subtype</th>
                    <th>Cost</th>
                    <th>Weight</th>
                    <th>Properties</th>
                    <th>Damage</th>
                    <th>Damage Type</th>
                    <th>Armor Class</th>
                    <th>Min strength</th>
                    <th>Stealth</th>
                    <th>Carrying capacity</th>
                    <th>Speed</th>
                </tr>
                </thead>
                <tbody>
                    {# @var equipmentType \App\Entity\DndEquipmentType #}
                    {# @var equipment \App\Entity\DndEquipment #}
                    {% for equipmentType in equipmentTypeList %}
                        <tr class="table-secondary">
                            <th colspan="12">{{ equipmentType.name }}</th>
                        </tr>
                        {% for equipment in equipmentType.dndEquipment %}
                            <tr>
                                <th>{{ equipment.name }}</th>
                                <td>{{ equipment.subtype.name }}</td>
                                <td>{{ equipment.cost|money }}</td>
                                <td title="{{ equipment.weight|kg }}">{{ equipment.weight|lb }}</td>
                                <td>{{ equipment.properties }}</td>
                                <td>{{ equipment.damage }}</td>
                                <td>{{ equipment.damageType }}</td>
                                <td>{{ equipment.armorClass }}</td>
                                <td>{{ equipment.strength }}</td>
                                <td>{{ equipment.stealth }}</td>
                                <td>{{ equipment.capacity }}</td>
                                <td>{{ equipment.speed }}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}
