<form method="post" action="{{ path('dnd_character_delete', {'id': dnd_character.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dnd_character.id) }}">
    <button class="btn">Delete</button>
</form>
