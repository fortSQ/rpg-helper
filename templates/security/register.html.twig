{% extends 'layout/base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
    <div class="row justify-content-md-center h-100">
        <div class="card-wrapper">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Register</h4>

                    {{ form_start(form) }}

                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_help(form.name) }}

                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_help(form.email) }}

                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first) }}
                    {{ form_help(form.plainPassword.first) }}

                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second) }}
                    {{ form_help(form.plainPassword.second) }}

                    <div class="form-group mt-3">
                        {{ form_widget(form.termsAccepted, {
                            'label': 'I agree to the',
                            'label_attr': {'class': 'checkbox-custom'}
                        } ) }}

                        <label class="mb-0"><a href="{{ path('app_homepage') }} ">Terms and Conditions</a></label>
                    </div>

                    <div class="form-group m-0">
                        <button type="submit" class="btn btn-primary btn-block" formnovalidate>
                            Register
                        </button>
                    </div>
                    <div class="mt-4 text-center">
                        Already have an account? <a href="{{ path('app_login') }}">Login</a>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
